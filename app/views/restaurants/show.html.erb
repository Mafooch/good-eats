<h3><%= @restaurant.name %></h3>

<p>Address: <%= @restaurant.address %><p>
<p>City: <%= @restaurant.city %><p>
<p>State: <%= @restaurant.state %><p>
<p>Zip code: <%= @restaurant.zip_code %><p>
<p>Description: <%= @restaurant.description %><p>
<p>Category: <%= @restaurant.category %><p>

<h2>Reviews</h2>

<ul>
  <% @reviews.each do |review| %>
    <li>
      Review: <%= review.body %> ------- Rating: <%= review.rating %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a review!", new_restaurant_review_path(params[:id]) %>
<br>
<%= link_to "Back to all restaurants", restaurants_path %>
