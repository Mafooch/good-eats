<h3><%= @restaurant.name %></h3>

<p><%= @restaurant.address %><p>
<p><%= @restaurant.city %><p>
<p><%= @restaurant.state %><p>
<p><%= @restaurant.zip_code %><p>
<p><%= @restaurant.description %><p>
<p><%= @restaurant.category %><p>

<h2>Reviews</h2>

<ul>
  <% @reviews.each do |review| %>
    <li>
      Review: <%= review.body %> ------- Rating: <%= review.rating %>
    </li>
  <% end %>
</ul>
