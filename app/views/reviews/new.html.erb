<h3>Add a review for <%= @restaurant.name %></h3>

<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body %>

  <br><br><p>rating</p>
  <% @ratings.each do |rating| %>
    <%= f.radio_button(:rating, rating) %>
    <%= f.label("rating_#{rating}", rating) %>
  <% end %>
  <br><br>
  <%= f.submit "Submit review" %>
<% end %>
<br>

<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant) %>
<br>
<%= link_to "Back to all restaurants", restaurants_path %>
